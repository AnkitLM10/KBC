<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#9400D3"

    android:weightSum="100"
    tools:context="com.example.ankit.quuiz.Questions">
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="English Questions"
    android:layout_gravity="center"
    android:id="@+id/bt1"
    android:background="@drawable/mybutton"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/bt2"
    android:layout_toStartOf="@+id/bt2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Apptitude Questions"
        android:layout_gravity="center"
        android:id="@+id/bt2"
        android:background="@drawable/mybutton"
        android:layout_alignTop="@+id/bt1"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="General Questions"
        android:layout_gravity="center"
        android:id="@+id/bt3"
        android:background="@drawable/mybutton"
        android:layout_alignTop="@+id/bt2"
        android:layout_toRightOf="@+id/bt2"
        android:layout_toEndOf="@+id/bt2" />

</RelativeLayout>
